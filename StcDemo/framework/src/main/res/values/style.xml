<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FrameworkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/button_normal</item>

        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/text_normal</item>
        <item name="colorControlActivated">@color/text_normal</item>
        <item name="colorControlHighlight">@color/text_normal</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:background">#f0f0e1</item>
    </style>

</resources>