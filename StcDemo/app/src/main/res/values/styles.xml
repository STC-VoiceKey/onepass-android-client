<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/main</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/button_normal</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.YellowAccent">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/text_normal</item>
        <item name="colorControlActivated">@color/text_normal</item>
        <item name="colorControlHighlight">@color/text_normal</item>
        <item name="android:textColorHint">@color/text_normal</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="colorAccent">#FFCC00</item>-->
        <!--<item name="android:textColorPrimary">#FFFFFF</item>-->
        <!--<item name="android:background">@color/main</item>-->
    </style>

    <style name="ColoredButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/btn_text_color</item>
    </style>

    <style name="CheckBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

</resources>
